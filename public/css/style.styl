body
  padding 50px
  background #aaa
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF


#stage
	float left

	#container
		
		.kineticjs-content
			border 1px solid #444
			box-shadow 0 0 20px black

#server
	float right
	width 650px

	pre
		font-size 11pxj

#weapons
	position absolute
	bottom 0
	left 0
	width 500px
	height 120px

	div.weapon
		float left
		width 80px
		height 60px
		margin 0 10px
		border 1px solid black
		background #eee
		text-align center

		div.title
			font-weight bold
			font-size 12px

#debug
	float left
	width 480px
	margin-left 20px

	#debugArea
		width 100%
		height 500px
		overflow auto
		font-family monospace
		font-size 11px

		.item
			border-top 1px solid #ddd

			&.error
				color red


#serverFps
	position fixed
	left -1px
	top -1px
	padding 2px 4px
	text-align center
	width 50px
	font-family "Verdana"
	border 1px solid #aaa
	background #bbb
	border-radius 0 0 3px 0